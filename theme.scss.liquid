    .promo-block--expanded:not(.animating-out) & {
      max-width: 100%;
      .promo-block--header,
      .promo-block--text {
        max-width: 80%;
      }
    }
  }

  .promo-mosaic--column-narrow & {
    @include media($min: $bp-small) {
      max-width: 70%;
    }
  }

  .promo-grid--container & {
    @include media($min: $bp-small, $max: $bp-medium) {
      max-width: 80%;
    }
  }
}

.promo-block--content {
  position: relative;
  display: block;
  height: 100%;
  padding: $space-x-large $space-medium;
