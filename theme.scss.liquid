    }

    @include media($min: $bp-smaller) {
      width: 14%;
    }
  }

  .order-item-original-price {
    display: block;
    margin-bottom: $space-xxx-small;
    color: $color-text-light;
  }

  .order-item-discount-price {
    display: block;
    color: $color-sale;
  }

  .order-item-total {
    float: none;
    clear: both;
    padding-bottom: $space-large;

    @include media($min: $bp-smaller) {
