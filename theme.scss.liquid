.account-order {
  display: block;

  thead {
    display: none;
  }

  tr {
    display: block;
  }

  td {
    display: block;
  }

  @include media($min: $bp-smaller) {
    display: table;

    thead {
      display: table-header-group;
    }

    tr {
      display: table-row;
    }

    td {
      display: table-cell;
    }
  }
}

.order-footer {
  display: table;
  width: 100%;
  margin-top: $space-x-small;

  .order-footer-item {
    display: table-row;

    .order-footer-label,
    .order-footer-value {
      display: table-cell;
      padding-top: $space-xx-small;
      padding-bottom: $space-xx-small;
      line-height: 1.4;
    }

    &:nth-last-child(2) {
      .order-footer-label {
        padding-bottom: $space-small;
      }
    }
  }

  .discount-list-item {
    svg {
      height: rem(12px);
      width: rem(12px);
    }
  }

  .order-footer-total {
    display: table-row;
    border-top: 1px solid $color-border-soft;
