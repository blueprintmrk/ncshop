  text-decoration: none;
  transition: height 0.23s $ease-bubble;

  @include media($max: $bp-small) {
    height: 120px;
    padding-right: $local-expander-width + $space-medium;
    margin-top: 10px;
    cursor: pointer;
    border-radius: 4px;

    &.animating,
    &.promo-block--expanded {
      overflow: hidden;
    }

    &.animating-in,
    &.promo-block--expanded:not(.animating-out) {
      height: 270px;
    }

    &.promo-block--expanded,
    &.promo-block--expanded:not(.animating-out) {
