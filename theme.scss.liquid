  .promo-block--expanded.animating-out & {
    visibility: visible;
  }

  // Button should be transparent when collapsing, then opaque as expanding
  .animating-in &,
  .promo-block--expanded:not(.animating-out) & {
    opacity: 0;
    transition-delay: 0s;
  }

  svg {
    position: absolute;
    bottom: 50%;
    left: 50%;
    display: block;
    width: 20px;
    height: 12px;
    margin-bottom: -7px;
    margin-left: -10px;
